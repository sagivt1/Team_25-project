pipeline {
    agent { docker { image 'maven:3.8.1' } }
    stages {
        stage('build') {
            steps {
                sh 'mvn --version'
                sh 'mvn package'
            }
        }
        stage('test'){
            steps{
                sh 'mvn clean test'
            }
            post {
                always {
                   junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('test'){
            steps{
                sh 'mvn clean test'
            }
            post {
                always {
                   jacoco '**/target/code-coverage/**.exec'
                }
            }
        }


    }
} 

